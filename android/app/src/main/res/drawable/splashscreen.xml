<?xml version="1.0" encoding="utf-8"?><!-- The android:opacity="opaque" line — this is critical in preventing a flash of black as your theme transitions. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:opacity="opaque">
    <item android:drawable="@drawable/splashscreen_background" />
    <item
            android:drawable="@drawable/splashscreen_foreground"
            android:gravity="bottom|center_horizontal"
            android:width="300dp"
            android:height="72dp"
            android:bottom="100dp" />
</layer-list>
